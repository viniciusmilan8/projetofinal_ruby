<div class="container mt-4">
  <h1>Task Details</h1>

  <div class="card">
    <div class="card-body">
      <p class="card-text">
        <strong>Title:</strong> <%= @task.title %>
      </p>

      <p class="card-text">
        <strong>Description:</strong> <%= @task.description %>
      </p>

      <p class="card-text">
        <strong>Date Conclusion:</strong> <%= @task.dateconclusion %>
      </p>

      <p class="card-text">
        <strong>Completed:</strong> <%= @task.completed ? 'Completed' : 'Not Completed' %>
      </p>

      <div class="btn-group">
        <%= link_to 'Edit', edit_task_path(@task), class: 'btn btn-warning' %>
        <%= link_to 'Back', tasks_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>